<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- diamter is  the width and height of AvatarView with  dp  unit
    do not add "dp" ,it is known implicitly
    -->
    <com.bel.lampa.AvatarView
            android:layout_centerInParent="true"
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            app:diamater="320"
            app:colorProgress="@color/colorAccent"
            app:colorCircle="@color/colorPrimary"
            android:layout_height="wrap_content">
    </com.bel.lampa.AvatarView>

    <Button
            android:id="@+id/submit"
            android:layout_below="@+id/avatar"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:background="@drawable/cadre"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/load"/>

</RelativeLayout>